#This example data was taken from Frederick Huang Lin's ANCOM package: https://github.com/FrederickHuangLin/ANCOM-Code-Archive/tree/master/data
#
#Made with:
# Run in root directory of repository

source("R/formula.R")
source("R/mda.R")

args <- c("./inst/extdata/mda.example.count_data.tsv",
          "./inst/extdata/mda.example.meta_data.tsv",
          "./inst/extdata/mda.example.formulas.txt",
          "./output")

D <- mda.from_cmdargs(args)

mda.example <- c()
mda.example$count_data <- D$count_data
mda.example$meta_data <-  D$meta_data
mda.example$formulas <-   sapply(D$formula, function(d){d$fn.orig})

save(mda.example, file="data/mda.example.RData")